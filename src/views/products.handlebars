<div class="main-container" id="custom-target">
	<div class="products-main-container">
		<div class="list-header">
			<div class="list-title">Lista de productos</div>
		</div>
		<div class="list-container">
			<div class="product-list">
				{{#each products}}
					<div id="pid-{{this._id}}" class="product-item-full">
						<div class="product-item-text">
							<div class="first row">
								<div class="item-title">
									{{this.title}}
								</div>
								<div class="item-code">
									Cod:
									{{this.code}}
								</div>
							</div>
							<div class="second row">
								<div class="item-description">
									{{this.description}}
								</div>
							</div>
							<div class="third row">
								<div class="item-price">
									$
									{{this.price}}
								</div>
								<div class="item-category">
									Categoría:
									{{this.category}}
								</div>
								<div class="item-stock">
									Stock:
									{{this.stock}}
									unidades
								</div>
							</div>
						</div>
						<div class="item-thumbnails">
							{{#each this.thumbnails}}
								<div class="item-thumbnail">
									<img src="{{this}}" alt="" />
								</div>
							{{else}}
								<div class="no-image">Sin imágenes</div>
							{{/each}}
						</div>
						<form
							action="api/carts/643c5e9e7c350807cef915d7/product/{{this._id}}"
							method="POST"
							id={{this._id}}
							class="add-form"
							enctype="multipart/form-data"
						>
							<button
								type="submit"
								form={{this._id}}
								class="add-btn btn"
								name="submit"
							>Agregar</button>
						</form>
					</div>
				{{/each}}
			</div>
		</div>
		<div class="footer">
			{{#if hasPrevPage}}
				<div class="btn prev-btn">
					<a href="?page={{prevPage}}">Prev</a>
				</div>
			{{else}}
				<div class="invisible-btn">Prev</div>
			{{/if}}
			<div class="page-index">
				<p>
					Página
					<b>{{page}}</b>
					de
					<b>{{totalPages}}</b>
				</p>
			</div>

			{{#if hasNextPage}}
				<div class="btn next-btn">
					<a href="?page={{nextPage}}">Prox</a>
				</div>
			{{else}}
				<div class="invisible-btn">Prox</div>
			{{/if}}
		</div>
	</div>
</div>
<script src="/js/products.js"></script>